
.camp-card {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
}
.card-header-image {
	width: 15px;
	height: 15px;
	margin-right: 5px;
}
.post {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	width: 650rpx;
	background: #444444;
	-webkit-border-radius: 15rpx 15rpx 0rpx 0rpx;
	        border-radius: 15rpx 15rpx 0rpx 0rpx;
}
.head {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding-left: 30rpx;
	padding-top: 30rpx;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.head-text {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 27rpx;
	font-size: 21rpx;
	font-family: Microsoft YaHei;
	font-weight: bold;
	color: #888888;
	margin-top: 2px;
}
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding-top: 40rpx;
	padding-bottom: 40rpx;
}
.content-text {
	width: 563rpx;
	font-size: 29rpx;
	font-family: Microsoft YaHei;
	color: #FFFFFF;
	opacity: 0.8;
	line-height: 45rpx;
	letter-spacing: 2rpx;
	margin: auto;
	word-wrap: break-word;
}
.foot {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding: 30rpx 30rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	width: 570rpx;
	background: #585858;
	-webkit-box-shadow: 0rpx 20rpx 38rpx 0rpx rgba(219, 165, 3, 0.2) inset;
	        box-shadow: 0rpx 20rpx 38rpx 0rpx rgba(219, 165, 3, 0.2) inset;
	-webkit-border-radius: 0rpx 0rpx 15rpx 15rpx;
	        border-radius: 0rpx 0rpx 15rpx 15rpx;
}
.card-bottom-container {
	width: 217.5px;
	text-align: right;
	display: inline-block;
}
