	width: 10px;
	height: 10px;
	margin-right: 2px;
}
.thumb-up-text {
	width: 10px;
	height: 10px;
	font-size: 10px;
	margin-right: 10px;
	color: #DBA503;
}
.thumb-down {
	width: 10px;
	height: 10px;
	margin-right: 2px;
}
.thumb-down-text {
	width: 10px;
	height: 10px;
	font-size: 10px;
	margin-right: 10px;
	color: #D5D5D5;
}
.comment-icon {
	width: 10px;
	height: 10px;
	margin-right: 2px;
}
.comment-icon-text {
	width: 10px;
	height: 10px;
	font-size: 10px;
	color: #D5D5D5;
}
.card-bottom-time {
	font-size: 10px;
	color: #D5D5D5;
	width: 80px;
	display: inline-block;
